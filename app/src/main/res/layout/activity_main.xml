        android:layout_marginBottom="18dp"
        android:background="#A3A2A2"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/botao8"
        app:layout_constraintStart_toEndOf="@+id/botaoAdicao"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/botao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="18dp"
        android:background="#A3A2A2"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/botao0"
        app:layout_constraintStart_toEndOf="@+id/botao1" />

    <Button
        android:id="@+id/botaoApagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="21dp"
